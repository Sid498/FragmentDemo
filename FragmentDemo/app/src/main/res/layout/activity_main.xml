<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffbbc2"
    android:id="@+id/myLayout"
    tools:context="com.example.sidpawar.fragmentdemo.MainActivity">

    <fragment
        android:id="@+id/fragment2"
        android:name="com.example.sidpawar.fragmentdemo.MyFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <fragment
        android:id="@+id/fragment3"
        android:name="com.example.sidpawar.fragmentdemo.FragmentB"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/fragment2"
        android:layout_below="@+id/fragment2"
        />
</RelativeLayout>
